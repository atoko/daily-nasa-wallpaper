<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:SpaceADay="clr-namespace:SpaceADay" x:Class="SpaceADay.Carousel" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<StackPanel x:Name="mainGrid" Margin="0" Orientation="Horizontal" Background="Gray" HorizontalAlignment="Left" VerticalAlignment="Top">
		<ListView Margin="0" Height="255" IsSynchronizedWithCurrentItem="False" ItemsSource="{Binding IndexFiles}" SelectionChanged="ListView_SelectionChanged" SelectionMode="Single"/>
		<Image Height="213" Source="{Binding Display, Mode=OneWay}" Stretch="Fill"/>
	</StackPanel>
</UserControl>
